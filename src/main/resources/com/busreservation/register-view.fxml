<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?xml-stylesheet type="text/css" href="style.css"?>

<?import javafx.scene.Cursor?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.busreservation.Register">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label style="-fx-font-size: 25;">Sign up</Label>
    <VBox spacing="4" style="-fx-background-color: #e0e0e0; -fx-background-radius: 4px;" maxWidth="600">
        <padding>
            <Insets right="50.0" bottom="50.0" left="50.0" top="50.0"/>
        </padding>
        <Label>Register an account</Label>
        <TextField fx:id="name"  />
        <Label>Admission number</Label>
        <TextField fx:id="ad_no"/>
        <Label>Password</Label>
        <PasswordField fx:id="pass1"/>
        <Label>Password confirmation</Label>
        <PasswordField fx:id="pass2"/>
        <Button maxWidth="600" onAction="#Signin" style="-fx-background-color: none;" underline="true">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
            Already have an account? Register.
        </Button>
        <Button onAction="#RegisterButtonClick" maxWidth="600">Register</Button>
        <Button onAction="#Dashboard" maxWidth="600">Dashboard</Button>
    </VBox>

</VBox>

